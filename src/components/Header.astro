---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeIcon from "./icons/ThemeIcon.astro";
---

<header>
  <nav>
    <div class="left">
      <b>
        <a href="/">
          {SITE_TITLE}
        </a>
      </b>
    </div>
    <div class="right">
      <HeaderLink href="https://johncodes.com/rss.xml">rss</HeaderLink>
      <HeaderLink href="/archive">archive</HeaderLink>
      <!--<HeaderLink href="/public-keys.txt">Public keys</HeaderLink>-->
      <ThemeIcon />
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0.5em 0;
    background: var(--background);
    border-bottom: 1px solid var(--border);
  }
  nav {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 18px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .right {
    display: flex;
    align-items: center;
    gap: 1em;
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
    font-weight: 600;
  }
  h2 a {
    color: var(--text-main);
    text-decoration: none;
  }
  nav a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9em;
    transition: color 0.2s ease;
  }
  nav a:hover {
    color: var(--text-main);
  }
  nav a.active {
    color: var(--accent);
  }
</style>
