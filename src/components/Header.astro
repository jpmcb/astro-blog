---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeIcon from './ThemeIcon.astro';
---

<header>
	<nav>
		<div class="left">
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="right">
			<HeaderLink href="/archive">Archive</HeaderLink>
			<HeaderLink href="/talks">Talks</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<!--<HeaderLink href="/public-keys.txt">Public keys</HeaderLink>-->
			<ThemeIcon />
		</div>
	</nav>
</header>

<style>
    header {
        margin: 0;
        padding: 0.5em 0;
        background: var(--background);
        border-bottom: 1px solid var(--border);
    }
    nav {
        max-width: 720px;
        margin: 0 auto;
        padding: 0 1em;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .right {
        display: flex;
        align-items: center;
        gap: 1em;
    }
    h2 {
        margin: 0;
        font-size: 1.2em;
        font-weight: 600;
    }
    h2 a {
        color: var(--text-main);
        text-decoration: none;
    }
    nav a {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.9em;
        transition: color 0.2s ease;
    }
    nav a:hover {
        color: var(--text-main);
    }
    nav a.active {
        color: var(--accent);
    }
</style>
