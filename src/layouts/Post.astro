---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import BlueskyComments from "../components/BlueskyComments.astro";

type Props = CollectionEntry<"posts">["data"] & { slug: string };

const {
  title,
  description,
  pubDate,
  tags,
  updatedDate,
  heroImage,
  slug,
  bskyPost,
} = Astro.props;

const ogImage = `/og/${slug}.png`;
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description || title}
      image={ogImage}
    />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>

        {
          tags?.map((tag: string) => (
            <span data-pagefind-filter="tags">#{tag} </span>
          ))
        }

        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <hr />
          </div>
          <slot />
          {bskyPost && <BlueskyComments postUrl={bskyPost} />}
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero-image {
    width: 100%;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
  }
  .title {
    text-align: left;
    line-height: 1;
  }
  .title h1 {
    font-size: 2em;
    margin: 0 0 0.5em 0;
  }
  .date {
    color: rgb(var(--gray));
  }
  .last-updated-on {
    font-size: 0.8em;
    margin: 0.5em 0 0 0;
  }
</style>
