---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const latestPosts = (await getCollection('posts'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 10);

const popularPosts = (await getCollection('posts'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .filter((post) => post.data.isPopular)
    .slice(0, 10);

const favPosts = (await getCollection('posts'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .filter((post) => post.data.isFav)
    .slice(0, 10);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
        <main>
            <div class="title-posts">
                <h3>
                    Latest posts
                </h3>
                <div class="posts">
                    {latestPosts.map(post => (
                        <div class="post-row">
                            <a href={`/archive/${post.id}/`}>{post.data.title}</a>
                            <span class="date">{post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}</span>
                        </div>
                    ))}
                </div>
            </div>


            <div class="title-posts">
                <h3>
                    Popular posts
                </h3>
                <div class="posts">
                    {popularPosts.map(post => (
                        <div class="post-row">
                            <a href={`/archive/${post.id}/`}>{post.data.title}</a>
                            <span class="date">{post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}</span>
                        </div>
                    ))}
                </div>
            </div>

            <div class="title-posts">
                <h3>
                    My favorite posts
                </h3>
                <div class="posts">
                    {favPosts.map(post => (
                        <div class="post-row">
                            <a href={`/archive/${post.id}/`}>{post.data.title}</a>
                            <span class="date">{post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}</span>
                        </div>
                    ))}
                </div>
            </div>
        </main>
		<Footer />
	</body>
</html>

<style>
    .title-posts {
        margin-bottom: 2.1em;
    }
    .post-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5em 0;
        border-bottom: 1px solid var(--border);
    }
    .date {
        color: var(--text-secondary);
        font-size: 0.9em;
    }
    a {
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
</style>
